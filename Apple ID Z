<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>apple ID</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        #editSection {
            display: none;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>当前代理：HTML协议</h1>
    <h1>创建人：ZMC</h1>
    <p>请输入密码以修改文本内容。</p>

    <label for="passwordInput">请输入密码:</label>
    <input type="password" id="passwordInput" />
    <button onclick="checkPassword()">提交</button>

    <div id="editSection">
        <h2>文本内容：</h2>
        <textarea id="textContent" rows="10" cols="50">这是默认的文本内容，用户可以修改它。</textarea><br>
        <button onclick="saveChanges()">保存修改</button>
    </div>

    <script>
        const correctPassword = "xiugaiwenben";  // 设置正确的密码

        // 检查密码并显示文本编辑区
        function checkPassword() {
            const enteredPassword = document.getElementById("passwordInput").value;
            if (enteredPassword === correctPassword) {
                document.getElementById("editSection").style.display = "block";  // 显示文本编辑区
                alert("密码正确，您现在可以修改文本内容！");
            } else {
                alert("密码错误，请重新尝试！");
            }
        }

        // 保存修改后的文本
        function saveChanges() {
            const newText = document.getElementById("textContent").value;
            alert("文本已成功修改！新文本内容如下：\n\n" + newText);
        }
    </script>
</body>
</html>
